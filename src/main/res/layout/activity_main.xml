<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeActivity"
    android:background="#ceceff"
    tools:context="com.kimvan.hung.vocabulary.MainActivity">

   <TextView
       android:id="@+id/title_main"
       android:layout_width="match_parent"
       android:layout_height="180dp"
       android:textColor="@color/colorTitileMain"
       android:text="@string/vocabulary_de_francais"
       android:textSize="45sp"
       android:padding="30dp"
       android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/layout_options_main"
        android:layout_below="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/button_add_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/colorBackgroundButton"
            android:text="@string/ajouter_un_mot"
            android:textColor="@color/colorTitileMain"
            android:onClick="addMainClicked"/>

        <Button
            android:id="@+id/button_test_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/tester_les_mot"
            android:textColor="@color/colorTitileMain"
            android:background="@color/colorBackgroundButton"
            android:onClick="testMainClicked"/>

        <Button
            android:id="@+id/button_information_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information"
            android:layout_margin="4dp"
            android:textColor="@color/colorTitileMain"
            android:background="@color/colorBackgroundButton"
            android:onClick="informationClicked"/>

        <Button
            android:id="@+id/button_quite_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quitter"
            android:layout_margin="4dp"
            android:textColor="@color/colorTitileMain"
            android:background="@color/colorBackgroundButton"
            android:onClick="quitterClicked"/>
    </LinearLayout>

    <TextView
        android:id="@+id/database_mode_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/example"
        android:layout_margin="5dp"
        android:textSize="10sp"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"/>


</RelativeLayout>
