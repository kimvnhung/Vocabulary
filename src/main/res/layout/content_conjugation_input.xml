<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_conjugation_input"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_conjugation_input">

    <TextView
        android:id="@+id/title_conjugation_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:text="@string/title_activity_conjugation_input"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/le_temps_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_conjugation_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="le Temps"
        android:gravity="center"/>
    <LinearLayout
        android:layout_below="@+id/le_temps_txt"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="*Je"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/input_je_conjugation_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="*Tu"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/input_tu_conjugation_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="*Il/Elle"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/input_il_elle_conjugation_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="*Nous"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/input_nous_conjugation_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="*Vous"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/input_vous_conjugation_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="*Ils/Elles"
                android:layout_weight="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/input_ils_elles_conjugation_edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/button_save_conjugation_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Done"
        android:onClick="saveConjugatonClicked"/>
</RelativeLayout>