<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".testWord.learningGraph.DatePagerFragment">
    <Spinner
        android:id="@+id/spinner_month_in_date_pager_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp">

    </Spinner>
    <Spinner
        android:id="@+id/spinner_year_in_date_pager_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp">

    </Spinner>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart_on_date"
        android:layout_below="@+id/spinner_month_in_date_pager_graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    </com.github.mikephil.charting.charts.LineChart>
</RelativeLayout>