<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout_order_ur_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kimvan.hung.vocabulary.testWord.orderYourLetter.OrderYourWordActivity"
    tools:showIn="@layout/activity_order_your_word">


    <TextView
        android:id="@+id/tile_order_ur_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Dịch sang tiếng pháp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/point_order_ur_word"
        android:layout_width="@dimen/number_border"
        android:layout_height="@dimen/number_border"
        android:text="45"
        android:layout_alignParentEnd="true"
        android:background="@drawable/border_circle"
        android:gravity="center"
        android:layout_margin="15dp"/>


    <TextView
        android:id="@+id/question_content_order_ur_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ví dụ"
        android:layout_below="@+id/tile_order_ur_word"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/help_icon_order_ur_word"
        android:layout_width="@dimen/number_border"
        android:layout_height="@dimen/number_border"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/light_bulb"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btCheck_order_ur_word"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Check" />
</RelativeLayout>
